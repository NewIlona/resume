{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with main}}
        <main>
             <section>

                 <h2>{{> title data="Work history" big=true}}</h2>
                
                 <div>
                     <ul>

                     {{#each work}}  
                         <li>

                             <div>  {{position}} </div>

                             <br>


                             <div> 

                                 {{duration.from}} - 
                                 {{#if duration.to}} 
                                    {{duration.to}}
                                 {{else}} 
                                    (досі працюємо) 
                                 {{/if}} 
                           
                             </div>

                              <br> 

                             <div>  
                                {{#if company.url}}
                                     {{> link text=company.name href=company.url _blank=true noLine=true}}
                                {{else}}
                                     <b> {{company.name}}</b>
                                {{/if}}   
                             </div>


                              <br>

                             <div>

                             <strong>Project ({{projectAmount}})</strong>
                          
                             </div>
     
                             <br>
             
                             <ul>

                                  {{#each projects}}
                                     <li> 
                                          <div> {{> link text=name href=url _blank=true noLine=true}}</div>
                               
                                          <br>

                                          <div>
                                                 <p>{{about}}</p>
                                          </div>

                                          <br>

                                          <div>
                                                  <strong> Project stacks ({{stackAmount}}) </strong>
                                          </div>

                                           <br>

                                           <div>
                                                <ul>
                                                   {{#each stacks}}
                                                      <li>{{name}}</li>
                                                   {{/each}}
                                                 </ul>
                                            </div>

                                           <br>
                                           

                                             <div>
                                                  <strong> Project awards ({{awardAmound}})</strong>
                                             </div>
                                           
                                             <br>
                                        
                                             <div>
                                                 <ul>
                                                    {{#each awards}}
                                                      <li>{{name}}</li>
                                                    {{/each}}
                                                </ul>
                                              </div>
                                         </li>
                                      {{/each}}
                                 </ul>
                              </li> 
                            <br>
                        {{/each}}    
                    </ul>  
                </div>
            </section>
      </main>
    {{/with}}
</div>

